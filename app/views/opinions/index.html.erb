<h1>Opinions</h1><br>

  <% if user_signed_in? %>
    <h4>Say something:</h4><br>
      <%= render 'form' %>
  <% end %>

    <ul class="list-unstyled">
      <% @opinions.each do | opinion | %>
        <div class="panel panel-default">
          <li class="panel-heading">
            <image class="profile-picture4"<%= image_tag display_photo(opinion.user) %>
            <%= opinion.user.fullname %>
            <small>@<%= opinion.user.username %></small>
            <small class="text-right"> | 
            <%= opinion.created_at.strftime("#{opinion.created_at.day.ordinalize} %b %Y") %>
            </small>
          <li class="panel-body"><%= opinion.body %></li>
            <% if user_signed_in? && current_user.id == opinion.user_id %>
              <li class="panel-footer text-right h6">
                <%= link_to edit_opinion_path(opinion) do %>
                <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to opinion, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash"></i>
                <% end %>
              </li>
            <% end %>
        </div>
      <% end %>
    </ul>

